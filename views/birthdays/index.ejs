<div>
    <h1 class="text-2xl font-bold mb-6">Today's Birthdays</h1>
    
    <% if (users.length > 0) { %>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% users.forEach(user => { %>
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <div class="bg-purple-100 px-4 py-2">
                        <h2 class="text-xl font-semibold text-purple-800"><%= user.username %></h2>
                    </div>
                    <div class="p-4">
                        <p class="mb-2"><strong>Email:</strong> <%= user.email %></p>
                        <p class="mb-4"><strong>Birthday:</strong> <%= new Date(user.dateOfBirth).toLocaleDateString() %></p>
                        <div class="flex justify-end">
                            <a href="/emails/send/<%= user._id %>" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">
                                Send Birthday Email
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="bg-white rounded-lg shadow-md p-6 text-center">
            <i class="fas fa-birthday-cake text-4xl text-gray-400 mb-4"></i>
            <p class="text-gray-600">No birthdays today!</p>
        </div>
    <% } %>
    
    <div class="mt-8">
        <a href="/emails/send-all-birthday" class="bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700">
            Send Birthday Emails to Everyone Celebrating Today
        </a>
    </div>
</div>