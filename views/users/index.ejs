<div>
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold">Users</h1>
        <a href="/users/new" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Add New User</a>
    </div>

    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <table class="min-w-full">
            <thead class="bg-gray-100">
                <tr>
                    <th class="py-3 px-4 text-left">Username</th>
                    <th class="py-3 px-4 text-left">Email</th>
                    <th class="py-3 px-4 text-left">Birthday</th>
                    <th class="py-3 px-4 text-left">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                <% users.forEach(user => { %>
                    <tr class="hover:bg-gray-50">
                        <td class="py-3 px-4"><%= user.username %></td>
                        <td class="py-3 px-4"><%= user.email %></td>
                        <td class="py-3 px-4"><%= new Date(user.dateOfBirth).toLocaleDateString() %></td>
                        <td class="py-3 px-4 flex space-x-2">
                            <a href="/users/<%= user._id %>" class="text-blue-600 hover:text-blue-800">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="/users/<%= user._id %>/edit" class="text-yellow-600 hover:text-yellow-800">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form action="/users/<%= user._id %>?_method=DELETE" method="POST" class="inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                <button type="submit" class="text-red-600 hover:text-red-800">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                            <a href="/emails/send/<%= user._id %>" class="text-green-600 hover:text-green-800">
                                <i class="fas fa-envelope"></i>
                            </a>
                        </td>
                    </tr>
                <% }) %>
                <% if (users.length === 0) { %>
                    <tr>
                        <td colspan="4" class="py-4 px-4 text-center text-gray-500">No users found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>